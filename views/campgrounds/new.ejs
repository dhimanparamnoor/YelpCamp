<% layout('layout/boilerplate')%>
  <div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds" method="post" enctype="multipart/form-data" novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="campground[title]" required>
          <div class="valid-feedback">
      Looks good!
    </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" required>
          <div class="valid-feedback">
      Looks good!
    </div>
  </div>
  <div class="mb-3">
  <label for="image" class="form-label">Add Images</label>
  <br>
  <input class="form-control" type="file" id="image" name="image" multiple>
</div>
